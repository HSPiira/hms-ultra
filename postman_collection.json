                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"piira\",\n  \"password\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{api_base}}/token/",
              "host": ["{{api_base}}"],
